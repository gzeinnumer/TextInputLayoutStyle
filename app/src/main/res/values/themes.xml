<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TextInputLayoutStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextInputEditText">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="MyTextInputLayoutOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space</item>
    </style>

    <style name="MyTextInputLayoutOutlinedBox.Spesial">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="android:background">@drawable/mygzn_text_input_layout</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/mygzn_indicator_text_color</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="MyTextInputEditText.Spesial">
        <item name="android:background">@drawable/mygzn_text_input_edittext</item>
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="android:layout_marginRight">0.5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Rounded_ShapeAppearanceOverlay.MaterialComponents.TextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyTextInputLayoutOutlinedBox.Spesial.V2" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/mygzn_indicator_text_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearanceOverlay">@style/Rounded_ShapeAppearanceOverlay.MaterialComponents.TextInputLayout</item>
        <item name="boxStrokeColor">@color/input_text_no_underline</item>
    </style>

    <style name="MyTextInputEditText.Spesial.V2">
        <item name="android:background">@drawable/mygzn_text_input_edittext_3d_shadow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTextInputLayoutOutlinedBox.Spesial.V3" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/mygzn_indicator_text_color</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="shapeAppearanceOverlay">@style/Rounded_ShapeAppearanceOverlay.MaterialComponents.TextInputLayout</item>
        <item name="boxStrokeColor">@color/input_text_no_underline</item>
    </style>

    <style name="MyTextInputEditText.Spesial.V3">
        <item name="android:background">@drawable/mygzn_text_input_edittext_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>